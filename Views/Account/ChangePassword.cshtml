@using Web_CSV_Json_XML_reader.ViewModels;
@model ChangePasswordViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8' />
    <title>Вход</title>
</head>
<body>
    <h2 class="centered">Изменение пароля</h2>
    <div class="centered">
        <form class="row g-3 needs-validation" novalidate name="changePasswordForm" method="post" action="/Account/SetNewPassword">
            <div class="card card-body">
                <div class="input-group mb-3">
                    <input class="form-control" id="validationLoginPassword" style="width:100%;" placeholder="Введите ваш текущий пароль" type="password" name="oldPassword" required />
                    <div class="invalid-feedback" id="LoginPasswordError"></div>
                    <br>
                </div>
                <div class="input-group mb-3">
                    <input class="form-control" id="validationRegisterPassword" style="width:100%;" placeholder="Введите новый пароль, он должен содержать не менее 6 символов" type="password" name="newPassword" required />
                    <div class="invalid-feedback" id="passwordRegisterError"></div><br>
                </div>
                <div class="input-group mb-3">
                    <input class="form-control" id="validationRegisterPasswordRepeat" style="width:100%;" placeholder="Повторите ваш новый пароль" type="password" name="newPasswordRepeat" required />
                    <div class="invalid-feedback" id="confirmRegisterPasswordError"></div><br>
                </div>
                <div>
                    <input class="btn btn-primary" type="submit" value="Изменить пароль" />
                    <br>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
