@using Web_CSV_Json_XML_reader.Models
@using Web_CSV_Json_XML_reader.Controllers
@model JSONViewModel;

<!DOCTYPE html>
<html>
<head>
    <title>JSON Reader | File: @Model.Name</title>
    <meta charset="utf-8" />
</head>
<body>
    <form method="POST" action="/Home/JSONSave">
        <div class="centered">
            <div class="card card-body">
                <div class="btn-group mb-3" role="group">
                    <a class="btn btn-secondary" href="/home/TextInput">Вернуться на главную</a>
                    <input class="btn btn-secondary" type="submit" value="Сохранить изменения" />
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Название файла:</span>
                    </div>
                    <input type="text" class="form-control" aria-describedby="basic-addon3" name="Name" value="@Model.Name" />
                </div>
            </div>
        </div>
        <div class="div-for-raw">
            <div class="card card-body">
                @Html.Raw(Model.RawHTML)
            </div>
        </div>
        <input type="hidden" value="@Model.Data" name="Data" />    
    </form>
    
</body>
</html>
